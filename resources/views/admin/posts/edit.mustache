<html>
  <head>
    <title>Clojure Blog</title>
  </head>
  <body>
    <div class="container">
      <h1>Editing Poste</h1>
<sections>
{{#posts}}
      <form action="/admin/posts/{{id}}/save" method="post">
        <label for="title">Title</label>
        <input name="title" value="{{title}}"/><br />
        <label for="body">Body</label>
        <textarea name="body">{{body}}</textarea> <br/>
        <input type="submit"/>
      </form>
{{/posts}}
</sections>
    </div>
  </body>
</html>